{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "src/firebase/*.json",
        "outDir": "dist/firebase",
        "watchAssets": true
      },
      {
        "include": "i18n/**/*",
        "outDir": "dist/i18n",
        "watchAssets": true
      }
    ]
  }
}
